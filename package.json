{
  "name": "pull-request-notifications",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration development --base-href index.html",
    "watch": "ng build --watch --configuration development --base-href index.html",
    "build:prod": "ng build --configuration production --base-href index.html",
    "watch:prod": "ng build --watch --configuration production --base-href index.html",
    "start:electron": "npm run build:prod && ELECTRON_DISABLE_SECURITY_WARNINGS=true electron .",
    "make:dir": "electron-builder --dir",
    "make:dist": "electron-builder"
  },
  "build": {
    "appId": "pull-requests-viewer",
    "electronLanguages": [
      "en-US"
    ],
    "files": [
      "!node_modules",
      "src/application.js",
      "src/assets/**/*",
      "dist/browser/**/*"
    ],
    "asar": true
  },
  "private": true,
  "main": "src/application.js",
  "dependencies": {
    "@angular/animations": "^17.0.3",
    "@angular/common": "^17.0.3",
    "@angular/compiler": "^17.0.3",
    "@angular/core": "^17.0.3",
    "@angular/forms": "^17.0.3",
    "@angular/platform-browser": "^17.0.3",
    "@angular/platform-browser-dynamic": "^17.0.3",
    "@angular/router": "^17.0.3",
    "@types/chrome": "^0.0.143",
    "electron-json-storage": "^4.6.0",
    "ngx-electron": "^2.2.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.1.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.1",
    "@angular/cli": "^17.0.1",
    "@angular/compiler-cli": "^17.0.3",
    "@types/electron-json-storage": "^4",
    "@types/node": "^12.11.1",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "typescript": "~5.2.2"
  }
}
